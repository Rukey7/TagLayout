<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dl7.taglayout.MainActivity">

    <com.dl7.tag.TagLayout
        android:id="@+id/tag_layout"
        style="@style/TagLayout.RandomColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tag_layout_fit_num="1"
        app:tag_layout_horizontal_interval="20dp"
        app:tag_layout_vertical_interval="10dp"
        app:tag_view_text_size="16"
        app:tag_layout_press_feedback="true"/>
</FrameLayout>
